<div class="container">
  <h4 class="text-uppercase text-center">Modificar universidad</h4>
  <form action="/modificar/m" method="POST" class="form-horizontal">
    <div class="form-group">
      <label for="nombreCompleto">ID (este valor no es editable):</label>
      <input type="text" id="_id" name="_id" class="form-control" placeholder="ID"
      autofocus>
    </div>
    <div class="form-group">
      <label for="nombreCompleto">Nombre:</label>
      <input type="text" id="nombreCompleto" name="nombreCompleto" class="form-control" placeholder="Nombre Completo"
      autofocus>
    </div>
    <div class="form-group">
      <label for="siglas">Siglas:</label>
      <input type="text" id="siglas" name="siglas" class="form-control" placeholder="Siglas">
    </div>
    <div class= "form-gruop row ">
      <p><label for=""> Nivel:</label></p>
      <p><label for="Licenciatura" class="col-2 col-form-label"> Licenciatura</label>
      <input type="text" placeholder="SI/NO" class="form-control" id="Licenciatura" name="Licenciatura">
      <label for="" class="col-2 col-form-label"> Maestria</label>
      <input type="text" placeholder="SI/NO" class="form-control" id="Maestria" name="Maestria">
      <label for="" class="col-2 col-form-label"> Doctorado</label>
      <input type="text" placeholder="SI/NO" class="form-control" id="Doctorado" name="Doctorado">
      <label for="" class="col-2 col-form-label"> PosDoctorado</label>
      <input type="text" placeholder="SI/NO" class="form-control" id="PosDoctorado" name="PosDoctorado"></p>
    </div>
    <div class="form-group">
      <label for="rankingNacional">Ranking Nacional:</label>
      <input type="text" id="rankingNacional" name="rankingNacional" class="form-control" placeholder="Ranking Nacional">
    </div>
    <div class="form-group">
      <label for="numeroDeAlumnos">Número de alumnos:</label>
      <input type="text" class="form-control" placeholder="" id="numeroDeAlumnos" name="numeroDeAlumnos">
    </div>
    <div class= "form-gruop row">
      <p><label for=""> Con posgrado:</label></p>
      <p><label for="disponible" class="col-2 col-form-label"> Disponible </label>
      <input type="text" placeholder="SI/NO"  class="form-control" id="disponible" name="disponible">
      <label for="" class="col-2 col-form-label"> cantidad </label>
      <input type="text" placeholder=""  class="form-control" id="cantidad" name="cantidad"></p>
    </div>
    <div class="form-group">
      <label for="prestigio">Prestigio:</label>
      <input type="text" class="form-control" placeholder="" id="prestigio" name="prestigio">
    </div>
    <div>
      <button type="submit" name="button" class="btn btn-primary">Guardar</button>
    </div>
  </form>
</div>

